<h1><%= @place["name"] %></h1>

<h2>Journal Entries</h2>

<p>
  <% for entry in @entries %>
    <p>
      <h3><%= entry["title"] %></h3>
    </p>
    <p>
      <small><%= entry["occurred_on"] %></small>
    </p>
    <p>
      <%= entry["description"] %>
    </p>
  <% end %>
</p>

<p>
  <a href="/places/<%= @place["id"] %>/entries/new">New Entry</a>
</p>

<p><a href="/">Back to places</a></p>
